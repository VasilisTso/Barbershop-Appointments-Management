						"exec": [
							"// Basic assertions\r",
							"pm.test(\"Status is 200\", () => pm.response.to.have.status(200));\r",
							"pm.test(\"Has token\", () => {\r",
							"  const json = pm.response.json();\r",
							"  pm.expect(json).to.have.property(\"token\");\r",
							"});\r",
							"\r",
							"// Save token to environment for later requests\r",
							"const json = pm.response.json();\r",
							"if (json && json.token) {\r",
							"  pm.environment.set(\"token\", json.token);\r",
							"  pm.environment.set(\"userId\", json.user?.id || \"\");\r",
							"  pm.environment.set(\"userRole\", json.user?.role || \"\");\r",
							"}\r",
							""
